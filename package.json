{
  "name": "sphero-connector-http",
  "version": "0.0.5",
  "description": "A small CLI tool to run an express based HTTP server for connecting and controlling Sphero toys via HTTP requests",
  "keywords": [
    "cli",
    "sphero",
    "connector",
    "sphero-connector",
    "http",
    "api",
    "express"
  ],
  "author": "Christian KÃ¼hl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrkhl/sphero-connector-http.git"
  },
  "engines": {
    "node": "8.x"
  },
  "main": "index.js",
  "bin": {
    "sphero-connector-http": "index.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:watch:coverage": "jest --coverage --watchAll",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint ."
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "color-convert": "2.0.1",
    "cosmiconfig": "5.2.1",
    "express": "4.17.3",
    "sphero-connector-core": "0.0.5",
    "update-notifier": "3.0.1"
  },
  "devDependencies": {
    "coveralls": "3.0.7",
    "eslint": "6.5.1",
    "eslint-config-es": "3.16.0",
    "jest": "24.9.0",
    "supertest": "4.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ]
  }
}
